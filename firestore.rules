rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users - each user can read/write their own profile, partners can read each other's profiles
    match /users/{uid} {
      // Read is allowed if:
      // 1. It's your own document.
      // 2. The 'uid' you are trying to read is in the same couple as you.
      allow read: if request.auth.uid == uid ||
                   (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                    uid in get(/databases/$(database)/documents/couples/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.coupleId)).data.userIds);
      
      // You can only write to your own profile.
      allow write: if request.auth.uid == uid;
    }
    
    // Couples - rules to allow reading for joins and writing to join
    match /couples/{coupleId} {
      // Any authenticated user can read couple docs to find one via invite code.
      allow read: if request.auth != null;

      // The creator's UID must be the first one in the userIds list upon creation.
      allow create: if request.auth.uid == request.resource.data.userIds[0];

      // An update is allowed if:
      // 1. The requester is already a member (e.g., changing anniversary).
      // 2. A new user is joining a non-full (1-person) couple.
      allow update: if (request.auth.uid in resource.data.userIds) ||
                       (resource.data.userIds.size() == 1 &&
                        request.resource.data.userIds.size() == 2 &&
                        request.auth.uid in request.resource.data.userIds);
      
      // Deleting couples is not allowed.
      allow delete: if false;
    }
    
    // Chat messages - only couple members
    match /chats/{coupleId}/messages/{msgId} {
      allow read, create: if request.auth.uid in get(/databases/$(database)/documents/couples/$(coupleId)).data.userIds;
      allow update, delete: if request.auth.uid == resource.data.senderUid;
    }
    
    // Quackzulting - PRIVATE, partner cannot see
    match /quackzulting/{uid}/sessions/{sessionId} {
      allow read, write: if request.auth.uid == uid;
    }
    
    // Notifications - user can create their own or for their partner, and read their own.
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth.uid == resource.data.uid;
      allow create: if request.auth.uid == request.resource.data.uid ||
                    (request.resource.data.uid in get(/databases/$(database)/documents/couples/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.coupleId)).data.userIds);
    }
    
    // Pond Memories - couple can access
    match /pondMemories/{coupleId}/{activityId} {
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/couples/$(coupleId)).data.userIds;
    }

    // Goals - only couple members
    match /goals/{goalId} {
        // A user can read, update, or delete a goal if they are a member of the couple associated with that goal.
        allow read, update, delete: if request.auth.uid in get(/databases/$(database)/documents/couples/$(resource.data.coupleId)).data.userIds;

        // A user can create a goal if they are a member of the couple they are assigning the goal to.
        allow create: if request.auth.uid in get(/databases/$(database)/documents/couples/$(request.resource.data.coupleId)).data.userIds;
    }

    // Quack Counts - users can only write their own, but can read their partner's.
    match /quackCounts/{userId} {
      // Read is allowed if:
      // 1. It's your own document.
      // 2. The 'userId' you are trying to read is in the same couple as you.
      allow read: if request.auth.uid == userId ||
                   (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                    userId in get(/databases/$(database)/documents/couples/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.coupleId)).data.userIds);
      
      // You can only write to your own quack count.
      allow write: if request.auth.uid == userId;
    }
  }
}